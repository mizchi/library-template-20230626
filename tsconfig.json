{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "types": [
      "vitest/importMeta"
    ],
    "skipLibCheck": true,
  },
  "include": ["src/**/*"],
}
